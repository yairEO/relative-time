{
    "name": "@yaireo/relative-time",
    "version": "1.0.5",
    "homepage": "https://github.com/yairEO/relative-time",
    "description": "javascript function to transform timestamp or date to local relative-time",
    "keywords": [
        "relative time",
        "date",
        "timestamp",
        "javascript",
        "js",
        "local",
        "locale"
    ],
    "license": "MIT",
    "engines": {
        "node": ">=12.0.0"
    },
    "browserslist": [
        ">1%",
        "not dead",
        "not ie < 11",
        "not IE_Mob 11",
        "not op_mini all"
    ],
    "np": {
        "yarn": false
    },
    "scripts": {
        "start": "pnpm build",
        "build": "terser relative-time.js --compress --mangle --output relative-time.min.js",
        "test": "node --test relative-time.test.js",
        "clean": "rm -rf dist && pnpm makedir",
        "makedir": "mkdirp dist",
        "header": "headr relative-time.min.js -o=relative-time.min.js --version --author --homepage",
        "version": "pnpm build && pnpm header && git add .",
        "prepublishOnly": "pkg-ok"
    },
    "author": "Yair Even-Or <vsync.design@gmail.com>",
    "main": "./relative-time.min.js",
    "types": "./relative-time.d.ts",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/yairEO/relative-time.git"
    },
    "bugs": {
        "url": "https://github.com/yaireo/relative-time/issues"
    },
    "files": [
        "relative-time.js",
        "relative-time.min.js",
        "relative-time.d.ts",
        "relative-time.test.js"
    ],
    "devDependencies": {
        "headr": "^0.0.4",
        "mkdirp": "^3.0.1",
        "rimraf": "^6.0.1",
        "terser": "^5.43.1"
    }
}
